
<%- include("partials/header.ejs") -%>

<h1>Update</h1>
<form  action="/update/<%=thispost._id%>" method="post">
  <div class="form-group">
    <label>Title</label>
    <input class="form-control" type="text" name="title" value = '<%=thispost.title%>'>
    <label>Post</label>
    <textarea class="form-control" name="post" rows="5" cols="30" ><%=thispost.post%></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button">Update</button>
</form>

